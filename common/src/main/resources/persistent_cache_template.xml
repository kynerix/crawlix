<!-- https://docs.jboss.org/infinispan/10.1/configdocs/infinispan-config-10.1.html -->
<!-- Write through configuration -->
<!-- Load when joining a cluster, read and writes, don't purge on startup -->
<!-- Data stored in default data dir, per segment -->
<infinispan>
    <cache-container>
        <distributed-cache name="$CACHE_NAME" owners="1" mode="SYNC" statistics="true">
            <encoding>
                <key   media-type="application/x-protostream"/>
                <value media-type="application/x-protostream"/>
            </encoding>
            <memory>
                <off-heap size="$ENTRIES_IN_MEM"/>
            </memory>
            <persistence passivation="false">
                <file-store read-only="false"
                            purge="false">
                    <data path="data"/>
                    <index path="index"/>
                </file-store>
            </persistence>
            <!--indexing enabled="true" storage="filesystem">
                <indexed-entities>
                    <indexed-entity>crawlix.CrawlingJob</indexed-entity>
                    <indexed-entity>crawlix.Workspace</indexed-entity>
                    <indexed-entity>crawlix.Plugin</indexed-entity>
                    <indexed-entity>crawlix.WorkerNode</indexed-entity>
                </indexed-entities>
            </indexing-->
        </distributed-cache>
    </cache-container>
</infinispan>